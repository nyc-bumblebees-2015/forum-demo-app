<h1>Topic: <%= @topic.name %></h1>

<h2>Threads</h2>
<table id="topic_conversations">
  <thead>
    <tr>
      <th>Title</th>
      <th>Started by</th>
      <th>Started at</th>
    </tr>
  </thead>
  <tbody>
    <% @topic.conversations.each do |thr| %>
      <%= render partial:'thread', locals: {thr: thr} %>
    <% end %>
  </tbody>
</table>
